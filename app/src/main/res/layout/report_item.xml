<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="15dp">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="نوع العربة :"
        android:textColor="@android:color/black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="car"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:id="@+id/carName"/>
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="موديل العربة :"
        android:textColor="@android:color/black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="car"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:id="@+id/carModel"/>
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="رقم العربة :"
        android:textColor="@android:color/black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="car"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:id="@+id/carNumber"/>
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="التاريخ :"
        android:textColor="@android:color/black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="car"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:id="@+id/date"/>
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="الوقت :"
        android:textColor="@android:color/black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="car"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:id="@+id/time"/>
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="التكلفه :"
        android:textColor="@android:color/black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="car"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:id="@+id/cost"/>
</RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>